<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
/* On smaller screens, decrease text size */

@media (orientation: landscape) {
  .numbertext{
    margin-top: 15%;
   
  }
  input{
    margin-top: 15%;
  }
  #communitytext{
    margin-top:15%;
    
  }
}
@media (orientation: portrait) {
  .numbertext{
    margin-bottom: 15%;
   
  }
  #communitytext{
    margin-bottom:15%;    
  }
  input{
    margin-top:auto;
  }
}
@media screen and (min-width: 310px){
  #communitytext{
    margin-bottom: 15%;
   
  }
}
@media screen and (min-width: 754px) {
  #communitytext{
    margin-top:15%;
   margin-left: 10%;
   font-size: 100px;
   font-weight: 900;
   min-height: 70%;
   text-size-adjust: 900px;
   padding: auto;
  }
  input{
    margin-top: 40%;
    
    padding: auto;
    min-height: 200%
  }
  .numbertext{
    margin-top: 5%;
    margin-left: 15%;
    min-height: 60%;
    font-weight: 900;
  }
}
* {box-sizing: border-box;}
body {font-family: Verdana, sans-serif;}
img {vertical-align: middle;}

/* Slideshow container */
.slideshow-container {
  max-width: 1000px;
  position: static;
  margin: auto;
}

/* Caption text */
.buttons {
  color: #f2f2f2;
  font-size: 15px;
  padding: 6px 10px;
  position: absolute;
  top: 27%;
  left: 47%;
  width: fit-content;
  
  text-align: center;
  
}
input{
  color: white;
  border-style: groove;
  border-color: rgb(238, 219, 219);
  border-width: 0.5px; 
  line-height: 20px; 
  background: linear-gradient(to left, rgb(0 0 0 / .7), rgb(0 0 0 / 0));
  font-family:'Montserrat', sans-serif;
}
/* Number text (1/3 etc) */
.numbertext {
  color: #f2f2f2;
  text-align: center;
  background: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / 0));
  font-size: 34px;
  font-weight: 700 ;
  padding: 6px 12px;
  position: absolute;
  top: 10%;
  right: 50%;
  left: 10%;
  font-family:'Montserrat', sans-serif;
}
#communitytext{
  color: #f2f2f2;
  text-align: center;
  background: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / 0));
  font-size: 34px;
  font-weight: 700 ;
  padding: 6px 12px;
  position: absolute;
  top: 7.7%;
  margin-top: 3%;
  right: 57%;
  left: 10%;
  padding-bottom: 0%;
  font-family:'Montserrat', sans-serif;
}
/* The dots/bullets/indicators */
.dot {
  height: 15px;
  width: 15px;
  margin: 0 2px;
  background-color: #bbb;
  border-radius: 50%;
  display: inline-block;
  transition: background-color 0.6s ease;
}

.active {
  background-color: #717171;
}

/* Fading animation */
fade {
  animation-name: fade;
  animation-duration: 1.5s;
}

@keyframes fade {
  from {opacity: .4} 
  to {opacity: 1}
}


</style>
</head>
<body>
<div class="slideshow-container">

<div class="mySlides fade">
  <div class="numbertext">Electronics make life easier!</div>
  <img src="http://localhost:8080/public/black%20female%20courier.svg" style="width:100%">
  <div class="buttons"><a href="/edu"><input id="learn-now" type="button" value="Learn now"/></a></div>
</div>

<div class="mySlides fade">
  <div class="numbertext">Quality brings us less quiver!</div>
  <img src="http://localhost:8080/public/Premium%20Photo%20_%20Portrait%20Black%20smart%20African%20women%20worker%20standing%20happy%20smiling%20in%20factory%20industry%20workplace%20-%20Copy.png" style="width:100%">
  <div class="buttons" ><a href="/product-main"><input type="button" value="Shop Now"/></a></div>
</div>

<div class="mySlides fade">
  <div id="communitytext">The community brings all together!</div>
  <img src="http://localhost:8080/public/Premium%20Photo%20_%20Closeup%20of%20african%20businesspeople%20working%20on%20a%20project%20-%20Copy.png" style="width:100%">
  <div class="buttons" ><a href="/blog card"><input type="button" value="Read Now"/></a></div>
</div>

</div>
<br>

<div style="text-align:center">
  <span class="dot"></span> 
  <span class="dot"></span> 
  <span class="dot"></span> 
</div>

<script>
let slideIndex = 0;
showSlides();

function showSlides() {
  let i;
  let slides = document.getElementsByClassName("mySlides");
  let dots = document.getElementsByClassName("dot");
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";  
  }
  slideIndex++;
  if (slideIndex > slides.length) {slideIndex = 1}    
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";  
  dots[slideIndex-1].className += " active";
  setTimeout(showSlides, 3000); // Change image every 3 seconds
}
</script>

</body>
</html> 
